{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ES2020",
        "sourceMap": true,
        "module": "CommonJS",
        "lib": [
            "ES2020",
            "dom"
        ],
        "types": [
            "@cloudflare/workers-types",
            "node"
        ],
        "paths": {
            "~/*": [
                "src/app_shared/*",
            ],
            "@/*": [
                "src/*"
            ]
        },
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "functions/**/*.ts"
    ]
}